<script type="text/javascript" src="https://s.dou.ua/build/built.v1929.75176dd.js"></script>
	<script type="text/javascript" src="https://s.dou.ua/build/built.v1929.237ed87.js"></script>


	<script>
				window.loginManager = new LoginManager();

				function loginshow() {
					window.loginManager.showLogin({
						success: function() {
							window.location.reload();
						},
					});
					return false;
				}

				$('#login-link').click(loginshow);


	window.VOTE_URL = 'https://jobs.dou.ua/companies/reviews/vote/';
	window.COMMENTS_URL = 'https://jobs.dou.ua/companies/lohika-systems/reviews/add/';
	new CommentsManager({placeholder: "Оставить отзыв…"});
	$('.b-company-poll-widget').scrollToFixed();

	window.XHR_CP_URL = "https://jobs.dou.ua/companies/lohika-systems/load/";
	var vm = new ItemListManager($("#id_archive"), "div.archived", "div.b-comment", window.XHR_CP_URL);


			$(function() {
				if (impressions.length) {
					$.post('/ajax-impressions-track/', {
						'csrfmiddlewaretoken': window.CSRF_TOKEN,
						'impressions': JSON.stringify(impressions)
					});
				}
			});
	</script>



